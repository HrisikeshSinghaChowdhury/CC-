#include<stdio.h>
#include<conio.h>
#include<math.h>
void main()
{
   /*Declaration of variables*/
   int n,c=0,a=0,b=1,i=1;
   clrscr();
   printf("\n enter the number of terms we want to print\n");
   scanf("%d",&n);
   printf("\n The fibonacci series is as follows\n");
   printf("%d",a);
   printf(", %d",b);
   /*Find the sum of the given series*/
   while(i<=n-2)
     {
     c=a+b;
     printf(", %d",c);
     a=b;
     b=c;
     i=i+1;
     }
   getch();
}
